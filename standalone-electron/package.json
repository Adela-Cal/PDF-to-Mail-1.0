{
  "name": "pdf-email-manager-standalone",
  "version": "1.0.0",
  "description": "PDF Email Manager - Fully Standalone Desktop Application",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "dependencies": {
    "tree-kill": "^1.2.2"
  },
  "build": {
    "appId": "com.pdfemailmanager.standalone",
    "productName": "PDF Email Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-main.js",
      "preload.js",
      "icon.ico"
    ],
    "extraResources": [
      {
        "from": "../standalone/dist/PDFEmailManagerBackend.exe",
        "to": "backend/PDFEmailManagerBackend.exe"
      },
      {
        "from": "../frontend/build",
        "to": "frontend"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PDF Email Manager",
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "license": "../LICENSE.txt"
    }
  }
}
